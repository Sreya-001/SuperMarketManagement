<center><h4>Vegetables</h4></center>
<div class="mt-3 mb-3" style="border-top:3px solid black "></div>



<div class="container mb-3 ">
    <a href="~/Manager/addveg" class="btn btn-success">Add Vegetable</a>
</div>

<div class="container mt-3">

    <table class="table table-bordered table-hover mt-3">
        <tr class="bg-success text-white">
            <th>Id</th>
            <th>Product Name</th>
            <th>Product Category</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        @{
            try
            {
                if(TempData["veg"]!=null)
                {
                    foreach(var x in (List<SuperMarket.Models.Vegetable>)TempData["veg"])
                    {
                        <tr>
                        <td>@x.Id</td>
                        <td>@x.ItemName</td>
                        <td>@x.Category</td>
                        <td>@x.Quantity.ToString(format:"#,##0.00")</td>
                        <td>@x.Price.ToString(format:"#,##0.00")</td>
                        <td>
                         <a href="~/Manager/Editveg?id=@x.Id" class="btn btn-success">Edit</a>

                         <a href="~/Manager/Deleteveg?id=@x.Id" class="btn btn-danger" style="margin-left:3%">Delete</a>

                        </td>
                        </tr>
                    }
                }
            }
            catch
            {
                
            }
        }
    </table>

</div>

@{
